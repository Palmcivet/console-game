{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "module": "es6",
        "outDir": "./build/",
        "rootDir": ".",
        "target": "es5",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./source/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}